form.login
  height 400px
  width 300px
  display block
  margin 4em auto

  *
    font-family 'Open Sans', sans-serif

  h2, a
    text-align center

  a
    cursor pointer

  label, button, a
    display block
    margin 1em 0

    input
      margin-top .3em
      padding .5em .2em
      font-size 1em
      border 1px solid #eee

      &[type=text]
        width 100%
        display block

  .loginOptions
    label
      display inline
      float left
      width 50%

      input
        line-height 1em

    a
      color #ddd
      display inline
      float right
      width 50%
      text-align right

      &:hover
        color $hover

  button
    font-size 1em
    width 100%
    background lighten($hover,40%)
    border none
    cursor pointer
    padding .5em 0

    &:hover
      background $hover