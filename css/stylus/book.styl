.bookPage
  background #fafafa
  width 100% !important
  float left

  a.back
    float left

.book
  float left
  display inline-block
  border-radius $radius
  background #f4f4f4
  border-top 1px solid #f6f6f6
  margin 20px 15px
  width 350px
  height 350px
  overflow hidden
  box-shadow 0 2px 0 0 #C3C5C7, 0 2px 3px 0 #ddd

  &.open
    font-size .7em
    float none
    display block
    margin 20px auto
    max-height 700px
    height initial
    overflow-x hidden
    overflow-y scroll

    &:hover
      margin 20px auto
      box-shadow 0 2px 0 0 #C3C5C7, 0 2px 3px 0 #ddd

    section
      &.top-navigation
        h2
          margin-top .6em
          cursor initial

      &.banner
        border none
        height 220px
        width 100%

        &:hover
          height 230px
          transition height ease-in-out 2*$transition-time

          img
            margin-top -18%
            transition margin-top ease-in-out 2*$transition-time

  &:hover
    margin 18px 15px 22px 15px
    box-shadow 0 4px 0 0 #C3C5C7, 0 2px 3px 1px #eaeaea

  *
    font-family $sans

  section
    &.top-navigation
      background white
      height 50px
      border-bottom 1px solid #EDEDED

      a.icon
        display inline-block
        height 40px
        width 40px
        margin .3em 5px 0 5px
        background-size cover
        cursor pointer
        border-radius 20px

        &:hover
            background-color #f8f8f8

        &.favorite
          background-position-y -40px

        &.star
          background-image url('../img/poly/favorite.svg')
          float left

        &.more
          background-image url('../img/poly/more.svg')
          float right

      .title
        cursor pointer
        margin .5em 0 0 0
        font-size 1.2em
        float left
        width 240px
        overflow hidden
        display inline
        white-space nowrap
        text-overflow ellipsis
        height 32px

      p.number
        padding 0.7em 0.8em
        float right
        display inline-block
        width initial
        margin 0
        font-size 0.8em
        color #bbb
        line-height 2.5em

    &.language-navigation
      background white
      display inline-block
      width 100%
      border-top 1px solid #EDEDED
      border-bottom 3px solid darken(#F4F4F4, 4%)
      float left

      span.direction
        background-image url('../img/poly/direction.svg')
        width 6%
        float left
        height 22px
        margin-top 0.8em

      .language
        text-align center
        cursor pointer
        width 47%
        float left
        margin 0
        font-size 1.4em
        padding .4em .8em
        overflow hidden
        text-overflow ellipsis
        white-space nowrap
        text-transform capitalize

  .banner
    border none
    height 250px
    width 100%

    img
      margin-top -15%

  .moreInfo
    display none
    position absolute
    z-index 10
    height 0
    width 350px
    background rgba(255,255,255,.95)

    &.open
      display block
      height 250px

    p
      display inline-block
      margin 0

  .phrases
    float left
    font-size 1.4em
    display inline-block
    padding .1em 0 0 0
    width 100%

    ul.entries
      clear both
      width 100%
      padding 0
      font-size 0.6em
      background #fafafa

      p.empty
        text-align center
        color $secondary-blue
        margin-bottom 180px

      li.entry
        width 100%
        display inline-block
        padding 1em 0
        border-top 1px solid transparent
        border-bottom 1px solid transparent

        &:last-of-type
          border-bottom none

        &:hover
          background #f5f5f5
          border-color #f2f2f2

        ul
          display inline-block
          width 100%
          padding 0

          li
            display inline-block
            width 100%
            float left

            &:hover
              .options-wrapper
                  width 120px

            p
              width initial
              display inline-block
              margin 0
              padding .7em 1em
              position relative
              z-index 1
              height 42px

              &:hover
                box-shadow 0 3px 4px 1px #ccc

            &.source
              p
                box-shadow 0 3px 4px 0 #ddd
                border-radius 21px 21px 21px 0
                float left
                background #C4CDD1
                border darken(#C4CDD1, 5%)
                margin-left .5em

                &:hover
                  background darken(#C4CDD1, 10%)

              .options-wrapper
                margin-left -20px
                float left

                .options
                  border-radius 0 22px 22px 0
                  margin-left -220px
                  padding-left 40px
                  float left

              &:hover
                .options-wrapper
                  .options
                    margin-left -20px

              span.circle
                float left
                margin-right 0

            &.target
              p
                box-shadow 0 3px 4px 0 #ccc
                border-radius 21px 21px 0 21px
                float right
                background #BBDBFD
                border-color 1px solid darken(#BBDBFD, 40%)
                margin-right .5em


                &:hover
                  background darken(#bbdbfd, 10%)

              .options-wrapper
                margin-right -20px
                float right

                .options
                  border-radius 22px 0 0 22px
                  margin-right -220px
                  padding-right 40px
                  float right

              &:hover
                .options-wrapper
                  .options
                    margin-right -20px

              span.circle
                float right
                margin-left 0

            span.circle
              margin 1.2em .5em
              border-radius 100%
              width 10px
              height 10px
              float left
              border 1px solid #C5C9CB
              display block

              &:hover
                cursor pointer
                background #C5C9CB

            .options-wrapper
              width 0
              overflow hidden
              display inline-block
              height 47px

              .options
                width 124px
                display inline-block
                background #fff
                border darken(#f9f9f9, 7%)
                box-shadow 0 2px 3px 0 #ddd
                position relative
                z-index 0

                a
                  cursor pointer
                  display inline-block
                  float left
                  border-radius 100%
                  padding 5px
                  border 1px solid transparent

                  img
                    float left
                    height 30px
                    width 30px

                  &:hover
                    background #F8F8F8

    button
      border none
      cursor pointer
      height 50px
      width 50px
      padding 5px 13px 8px
      border-radius 100%
      margin .4em auto
      display block
      color $hover
      background #fdfdfd
      box-shadow 0 2px 0 #eee
      font-weight 700
      font-size 1.3em
      text-shadow 0 1px darken($hover, 25%)

      &:hover
        box-shadow 0 3px 0 #e9e9e9
        background #fff

  &.newBook
    border none
    cursor pointer

    .wrapper
      display inline-block
      background #fff
      box-shadow 0 3px 0 #eee
      height 250px
      width 250px
      border-radius 100%
      margin auto

      img
        display none
        height 150px
        margin-top 40px

      p
        font-family $sans
        font-style normal !important
        color $hover
        font-size 10em
        font-weight 700
        width 70px
        margin .4em auto
        text-shadow 0 1px darken($hover, 25%)
        line-height 150px

