.page.bookPage
  background #fafafa
  width 100% !important
  max-width 100% !important
  padding-top 0
  padding-bottom 0
  float left

  a.back
    float left

  .document
    border-radius $radius
    background #f4f4f4
    border 1px solid #e8e8e8
    margin 20px  auto
    width 350px
    max-height 900px
    overflow-x hidden
    overflow-y scroll
    box-shadow 0 5px 4px 1px rgba(0,0,0,.1)

    section.banner
      border none
      height 220px
      width 100%

      &:hover
        height 230px
        transition height ease-in-out 2*$transition-time

        img
          margin-top -25%
          transition margin-top ease-in-out 2*$transition-time

      img
        margin-top -23%

    nav
      width 100%
      position initial
      top initial
      background #fff
      border-bottom 1px solid #EDEDED
      z-index 5

      &.top-navigation
        height 50px

        h2
          float left
          display block
          width auto
          margin 0
          padding 0.5em 0
          font-size 1.4em
          white-space nowrap
          overflow hidden
          width 240px
          text-overflow ellipsis
          text-transform capitalize

        &:hover
          margin-top 0

        .rightSubNav
          float right

          .moreNavItems
            height 40px
            width 120px
            position absolute
            margin-left -120px
            display none

            a
              position static
              float left

        a
          display inline-block
          height 40px
          width 40px
          margin .3em 5px 0 5px
          background-size cover
          cursor pointer
          border-radius 20px

          &:hover
              background-color #f8f8f8

          &.favorite
            background-position-y -40px

          &.star
            background-image url('../img/poly/favorite.svg')
            float left

          &.more
            background-image url('../img/poly/more.svg')
            float right

          &.settings
            margin-top .6em
            background-image url('../img/poly/settings.svg')
            float right

            &:hover
              transform rotate(-.166turn)
              transition transform $transition-time ease-in-out

      &.language-navigation
        min-height 43px
        border-top 1px solid #EDEDED
        border-bottom 3px solid darken(#F4F4F4, 4%)

        span.direction
          background-image url('../img/poly/direction.svg')
          width 6%
          float left
          height 22px
          margin-top 0.8em

        .language
          text-align center
          cursor pointer
          width 47%
          float left
          margin 0
          font-size 1.4em
          padding .4em .8em
          text-transform capitalize
          overflow hidden
          white-space nowrap
          text-overflow ellipsis

    .phrases
      display inline-block
      padding .1em 0 0 0
      width 100%
      font-family 'Open Sans',helvetica,sans-serif

      ul.entries
        font-family 'Open Sans', sans-serif
        clear both
        width 100%
        padding 0
        font-size 0.6em
        background #fafafa

        p.empty
          text-align center
          color $secondary-blue
          margin-bottom 180px

        li.entry
          width 100%
          display inline-block
          padding 1em 0
          border-top 1px solid transparent
          border-bottom 1px solid transparent

          &:last-of-type
            border-bottom none

          &:hover
            background #f5f5f5
            border-color #f2f2f2

          ul
            display inline-block
            width 100%
            padding 0

            li
              display inline-block
              width 100%
              float left

              &:hover
                .options-wrapper
                    width 120px

              p
                width initial
                display inline-block
                margin 0
                padding .7em 1em
                position relative
                z-index 1
                height 42px

                &:hover
                  box-shadow 0 3px 4px 1px #ccc

              &.source
                p
                  box-shadow 0 3px 4px 0 #ddd
                  border-radius 21px 21px 21px 0
                  float left
                  background #C4CDD1
                  border darken(#C4CDD1, 5%)
                  margin-left .5em

                  &:hover
                    background darken(#C4CDD1, 10%)

                .options-wrapper
                  margin-left -20px
                  float left

                  .options
                    border-radius 0 22px 22px 0
                    margin-left -220px
                    padding-left 40px
                    float left

                &:hover
                  .options-wrapper
                    .options
                      margin-left -20px

                span.circle
                  float left
                  margin-right 0

              &.target
                p
                  box-shadow 0 3px 4px 0 #ccc
                  border-radius 21px 21px 0 21px
                  float right
                  background #BBDBFD
                  border-color 1px solid darken(#BBDBFD, 40%)
                  margin-right .5em


                  &:hover
                    background darken(#bbdbfd, 10%)

                .options-wrapper
                  margin-right -20px
                  float right

                  .options
                    border-radius 22px 0 0 22px
                    margin-right -220px
                    padding-right 40px
                    float right

                &:hover
                  .options-wrapper
                    .options
                      margin-right -20px

                span.circle
                  float right
                  margin-left 0

              span.circle
                margin 1.2em .5em
                border-radius 100%
                width 10px
                height 10px
                float left
                border 1px solid #C5C9CB
                display block

                &:hover
                  cursor pointer
                  background #C5C9CB

              .options-wrapper
                width 0
                overflow hidden
                display inline-block
                height 47px

                .options
                  width 124px
                  display inline-block
                  background #fff
                  border darken(#f9f9f9, 7%)
                  box-shadow 0 2px 3px 0 #ddd
                  position relative
                  z-index 0

                  a
                    cursor pointer
                    display inline-block
                    float left
                    border-radius 100%
                    padding 5px
                    border 1px solid transparent

                    img
                      float left
                      height 30px
                      width 30px

                    &:hover
                      background #F8F8F8

      button
        background none
        border none
        width 100%
        font-size 1em
        height 2.5em
        float left
        padding 0

        a
          cursor pointer
          height 40px
          width 40px
          padding 4px 13px 8px
          border-radius 100%
          margin 0 auto
          display block
          color $hover
          background #fff
          box-shadow 0 5px 4px 1px rgba(0,0,0,.1)

          &:hover
            box-shadow 0 5px 4px 1px rgba(0,0,0,.2)
            background lighten($hover, 40%)
            color $blue
