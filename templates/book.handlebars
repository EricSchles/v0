{{app-navigation}}
<section class="page bookPage">
  {{#link-to "dashboard" tagName="a" class="back"}}Back{{/link-to}}
  <section class="document">
    {{book-header favorite=favorite title=title sourceName=sourceName targetName=targetName bannerUrl=bannerUrl}}
    <section class="phrases">
      <ul class="entries">
        {{#each phrases}}
          <li class="entry">
            <ul>
              <li class="source">
                <p>{{sourcePhrase}}</p>
                {{phrase-options}}
              </li>
              <li class="target">
                <p>{{targetPhrase}}</p>
                {{phrase-options}}
              </li>
            </ul>
          </li>
          {{else}}
          <p class="empty">Shoot! There is nothing here!</p>
        {{/each}}
      </ul>
      <button {{action "addPhrase"}}><a>+</a></button>
    </section>
  </section>
</section>

